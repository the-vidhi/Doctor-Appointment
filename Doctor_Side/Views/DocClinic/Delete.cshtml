@model Doctor_Side.Models.DocClinic

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content">
                <div class="col-md-10">
                    <div class="card overflow-hidden">
                        <div class="bg-soft-primary">
                            <div class="row">
                                <div class="col-7">
                                    <div class="text-primary p-4">
                                        <h3 class="text-primary"> Delete Clinic </h3>

                                    </div>
                                </div>
                                <div class="col-5 align-self-end">
                                    <img src="~/assets/images/profile-img.png" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <div>
                                <a href="index.html">
                                    <div class="avatar-md profile-user-wid mb-4">
                                        <span class="avatar-title rounded-circle bg-light">
                                            <img src="~/assets/images/favicon.png" alt="" class="rounded-circle" height="34">
                                        </span>
                                    </div>
                                </a>
                            </div>

                            <div class="p-2">
                                <div class="alert alert-danger text-center mb-4" role="alert">
                                    Are you sure you want to delete this?
                                </div>
                                <form class="form-horizontal" asp-action="Delete">


                                    <div class="form-group row mb-0">
                                        <div class="col-12 text-right">
                                            <dl class="row">
                                                <dt class="col-sm-4">
                                                    Clinic Photo :
                                                </dt>
                                                <dd class="col-sm-6">
                                                    <img src="~/_content/Medical/Clinic_Images/@Model.Clinic_Profile" height="50" width="50" class="rounded-circle" />
                                                </dd>
                                                <dt class="col-sm-4">
                                                    Clinic Name :
                                                </dt>
                                                <dd class="col-sm-6">
                                                    @Html.DisplayFor(model => model.Clinic_Name)
                                                </dd>
                                                <dt class="col-sm-4">
                                                    Clinic Address :
                                                </dt>
                                                <dd class="col-sm-6">
                                                    @Html.DisplayFor(model => model.Clinic_Address)
                                                </dd>
                                                <dt class="col-sm-4">
                                                    Pincode :
                                                </dt>
                                                <dd class="col-sm-6">
                                                    @Html.DisplayFor(model => model.Clinic_Pincode)
                                                </dd>
                                                <dt class="col-sm-4">
                                                    Clinic Contact :
                                                </dt>
                                                <dd class="col-sm-6">
                                                    @Html.DisplayFor(model => model.Clinic_Contact)
                                                </dd>

                                                <dt class="col-sm-4">
                                                    State Name :
                                                </dt>
                                                <dd class="col-sm-6">
                                                    @Html.DisplayFor(model => model.State_Name)
                                                </dd>
                                                <dt class="col-sm-4">
                                                    City Name :
                                                </dt>
                                                <dd class="col-sm-6">
                                                    @Html.DisplayFor(model => model.City_Name)
                                                </dd>


                                            </dl>

                                            <input type="hidden" asp-for="Clinic_ID" />
                                            <input type="submit" value="Delete" class="btn btn-danger w-md waves-effect waves-light" />


                                            @*<button class="btn btn-primary w-md waves-effect waves-light" asp-action="Login" type="submit">Try Again</button>*@
                                        </div>
                                    </div>

                                </form>
                            </div>

                        </div>
                    </div>
                    <div class="mt-5 text-center">

                        <p>© 2020 Skote. Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesbrand</p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
