@model Doctor_Side.Models.DoctorReg

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4 class="mb-0 font-size-18">Your Profile</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="../../Home1/Index">Dashboard</a></li>
                                <li class="breadcrumb-item active">My Profile</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-4">
                    <div class="product-detai-imgs">
                        <div class="row">
                            <div class=" offset-md-1 ">
                                <div class="tab-content" id="v-pills-tabContent">
                                    <div class="tab-pane fade show active" id="product-1" role="tabpanel" aria-labelledby="product-1-tab">
                                        <div>
                                            <img src="~/_content/Medical/Doctor_Image/@Html.DisplayFor(model=>model.Doctor_Profile)" height="100" width="150" />

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="row-2">
                        <div class="col-md-7 offset-md-1 col-9 align-middle">
                            <div class="tab-content" id="v-pills-tabContent">
                                <div class="tab-pane fade show active" id="product-1" role="tabpanel" aria-labelledby="product-1-tab">
                                    <div>
                                        <h3><b>@Html.DisplayFor(model => model.Doctor_Name)</b></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="mt-4 mt-xl-3">
                        <div class="table-responsive">
                            <table class="table mb-0 table-bordered">
                                <tbody>
                                    <tr>
                                        <th scope="row" style="width: 400px;">E-mail : </th>
                                        <td>@Html.DisplayFor(model => model.Doctor_Email)</td>
                                    </tr>
                                    <tr>
                                        <th scope="row" style="width: 400px;">Gender : </th>
                                        <td>@Html.DisplayFor(model => model.Doctor_Gender)</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Contact : </th>
                                        <td>@Html.DisplayFor(model => model.Doctor_Contact)</td>
                                    </tr>

                                    <tr>
                                        <th scope="row">Category : </th>
                                        <td>@Html.DisplayFor(model => model.Category_Name)</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Degree : </th>
                                        <td>@Html.DisplayFor(model => model.Doctor_Degree)</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Education : </th>
                                        <td> @Html.DisplayFor(model => model.Doctor_Education)</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Experience : </th>
                                        <td> @Html.DisplayFor(model => model.Doctor_Experience)</td>
                                    </tr>
                                    <tr>
                                    </tr>


                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
                <div class="mt-5">

                </div>
            </div>
        </div>
    </div>
    </div>
    <div class="rightbar-overlay"></div>


