@model Doctor_Side.Models.DoctorReg

@{
    ViewData["Title"] = "Create";
    Layout = null;

    
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title> Doctor Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <link rel="shortcut icon" href="~/assets/images/favicon.png">
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-12 col-xl-10">
                    <div class="card overflow-hidden">
                        <div class="bg-soft-primary">
                            <div class="row">
                                <div class="col-7">
                                    <div class="text-primary p-4">
                                        <h5 class="text-primary">Free Register</h5>
                                        <p>Get your free Heal n Cure account now.</p>
                                    </div>
                                </div>
                                <div class="col-5 align-self-end">
                                    <img src="~/assets/images/profile-img.png" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <form class="form-horizontal needs-validation" asp-action="Create" enctype="multipart/form-data" novalidate asp-controller="DoctorReg" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div>
                                    <div class="avatar-md profile-user-wid mb-4">
                                        <span class="avatar-title rounded-circle bg-light">
                                            <img src="~/assets/images/favicon.png" alt="" class="rounded-circle" height="65">
                                        </span>
                                    </div>
                                </div>
                                <div class="p-2">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-lg-10 ">
                                                        <div class="mt-4 mb-lg-6">
                                                            <label for="uname">Name</label>
                                                            <input asp-for="Doctor_Name" class="form-control" placeholder="Enter username" required>
                                                            <span asp-validation-for="Doctor_Name" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-lg-8">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" asp-for="Doctor_Email" class="form-control" placeholder="Enter Email" required>
                                        <span asp-validation-for="Doctor_Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Gender</label>
                                        @Html.RadioButtonFor(m => m.Doctor_Gender, "Male") Male
                                        @Html.RadioButtonFor(m => m.Doctor_Gender, "Female") Female
                                        <span asp-validation-for="Doctor_Gender" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" asp-for="Doctor_Password" class="form-control" placeholder="Enter Password" required>
                                        <span asp-validation-for="Doctor_Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Contact</label>
                                        <input asp-for="Doctor_Contact" class="form-control input-mask" data-inputmask="'mask': '99-9999999999'" placeholder="Enter Contact" required>
                                        <span asp-validation-for="Doctor_Contact" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label for="state">Select Category : </label>
                                                <select asp-for="Category_ID" class="btn btn-secondary" asp-items="@(new SelectList(ViewBag.CatList,"Category_ID","Category_Name"))">
                                                    
                                                </select>
                                                <span asp-validation-for="Category_ID" class="text-danger"></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <label for="state">Degree : </label>
                                                <input asp-for="Doctor_Degree" class="form-control" placeholder="M.D,MBBS,M.S" required>
                                                <span asp-validation-for="Doctor_Degree" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Education : </label>
                                        <input asp-for="Doctor_Education" class="form-control input-mask" placeholder="Doctor of Medicine, University of Texas, USA (1990)" required>
                                        <span asp-validation-for="Doctor_Education" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Experience : </label>
                                        <input asp-for="Doctor_Experience" class="form-control input-mask" placeholder="25 years of Experience in Medicine" required>
                                        <span asp-validation-for="Doctor_Experience" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label>Choose Profile : </label>
                                        <input type="file" name="fileobj"  asp-for="Doctor_Profile" class="form-control" />
                                        <span asp-validation-for="Doctor_Profile" class="text-danger"></span>
                                    </div>


                                </div>
                                <div class="mt-4">
                                    <input class="btn btn-primary btn-block waves-effect waves-light" type="submit" value="Register" />
                                </div>
                                <div class="mt-4 text-center">

                                </div>

                            </form>
                        </div>

                    </div>
                </div>
                <div class="mt-5 text-center">
                    <p>Already have an account ? <a href="Login" class="font-weight-medium text-primary"> Login</a> </p>
                    <p>© 2020 Health Plus. Crafted with <i class="mdi mdi-heart text-danger"></i> by Brinda & Vidhi</p>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="~/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/assets/libs/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <script src="~/assets/js/pages/form-mask.init.js"></script>
    <script src="~/assets/js/app.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

