@model Medical.Models.Patient

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="login-section">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="column col-lg-12 col-md-12 col-sm-12">
                <!-- Login Form -->
                <div class="login-form">
                    <h2>Change Password</h2>
                    <!--Login Form-->
                    <form asp-action="ChangePassword"  method="post">
                        <div class="form-group">
                            <label>Enter Your Password</label>
                            <input type="hidden" asp-for="@TempData["sid"]">
                            <input type="password" asp-for="Patient_Password" placeholder="Password" required>
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="shipping-option" id="account-option-1">&nbsp; <label for="account-option-1">Remember me</label>
                        </div>

                        <div class="form-group">
                            <!--<button class="theme-btn btn-style-one" type="submit" name="submit-form"><span class="btn-title">LOGIN</span></button>-->
                            <input type="submit" class="theme-btn btn-style-three" value="Change Password" />
                        </div>

                        <div class="form-group pass">
                            <a href="#" class="psw">Lost your password?</a>
                        </div>
                    </form>
                </div>
                <!--End Login Form -->
            </div>
        </div>
    </div>
</section>