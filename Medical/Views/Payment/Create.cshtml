@model Medical.Models.Payment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-body">
    <div class="page-wrapper">
        <div class="page-header card">
            <div class="card-block">
                <h5 class="m-b-10">Add Payment Type</h5>
                <ul class="breadcrumb-title b-t-default p-t-10">
                    <li class="breadcrumb-item">
                        <a href="../home/Index"> <i class="fa fa-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="Index">Payment Type List</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="Create">Payment Type Add</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="page-body">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Add Payment Type Here...</h5>
                            
                        </div>
                        <div class="card-block">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Payment Type Name</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="Payment_Type_Name">
                                        <span asp-validation-for="Payment_Type_Name" class="text-danger"></span>
                                        <span class="messages"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2"></label>
                                    <div class="col-sm-10">
                                        <!--<button type="submit" class="btn btn-primary m-b-0">Submit</button>-->
                                        <input type="submit" value="Create" class="btn btn-primary m-b-0" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


