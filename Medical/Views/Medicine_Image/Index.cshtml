@model IEnumerable<Medical.Models.Medicine_Image>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Medicine
            </th>
            <th>
                Images
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Medicine_ID)
            </td>
            <td>
                <img src="~/Medicine_Images/@item.Medicine_Images" height="50" width="50" />
             </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Medicine_Image_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Medicine_Image_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Medicine_Image_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
