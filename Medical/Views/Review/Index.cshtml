@model PaginatedList<Medical.Models.Review>

@{
    ViewData["Title"] = "Review List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-header card">
                <div class="card-block">
                    <h5 class="m-b-10">Review List</h5>
                    <ul class="breadcrumb-title b-t-default p-t-10">
                        <li class="breadcrumb-item">
                            <a href="../Home/Index"> <i class="fa fa-home"></i> </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a>Review List</a>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">

                        <div class="card">
                            <div class="card-header">
                                <h5>Review List</h5>
                            </div>
                            <div class="card-block">
                                <div class="table-responsive">
                                    <div class="table-content">
                                        <div class="project-table">
                                            <table id="e-product-list" class="table table-striped dt-responsive nowrap">
                                                <thead>
                                                    <tr>
                                                        <th>Patient Name </th>
                                                        <th>  Doctor Name </th>
                                                        <th>  Review  </th>
                                                        <th> </th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td class="pro-name">
                                                                @Html.DisplayFor(modelItem => item.Patient_Name)
                                                            </td>
                                                            <td class="pro-name">
                                                                @Html.DisplayFor(modelItem => item.Doctor_Name)
                                                            </td>
                                                            <td class="pro-name">
                                                                @Html.DisplayFor(modelItem => item.Review_Msg)
                                                            </td>

                                                            <td>
                                                            </td>
                                                            <td class="action-icon">

                                                                <a asp-action="Delete" asp-route-id="@item.Review_ID" class="btn btn-grd-danger btn-round">
                                                                    <span class="icofont icofont-ui-delete"></span>
                                                                    DELETE
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                            <div class="row">
                                                @{
                                                    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                                                    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                                                }
                                                <div class="col-xs-12 col-sm-12 col-md-5">
                                                </div>
                                                <div class="col-xs-12 col-sm-12 col-md-7">
                                                    <div class="dataTables_paginate paging_simple_numbers" id="e-product-list_paginate">
                                                        <ul class="pagination">
                                                            <li class="paginate_button page-item previous disabled" id="e-product-list_previous">
                                                                <a asp-action="Index"
                                                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                                                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                                                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                                                   class="btn btn-primary btn-round @prevDisabled">
                                                                    Previous
                                                                </a>

                                                            </li>

                                                            <li class="paginate_button page-item next" id="e-product-list_next">
                                                                <a asp-action="Index"
                                                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                                                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                                                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                                                   class="btn btn-primary btn-round @nextDisabled">
                                                                    Next
                                                                </a>
                                                            </li>

                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="md-overlay"></div>
            </div>
        </div>
    </div>
    
</div>

